page{background-color: #edece8;}
.user_info_wrap{height: 45vh;overflow: hidden;background-color: var(--themeColor);}
.user_img_wrap{position: relative;}
/* 高斯模糊 */
.user_bg{height: 50vm;filter:blur(10rpx)}
.user_info{position: absolute;left: 50%;transform: translateX(-50%);top: 20%;text-align: center;}
.user_icon{width: 150rpx;height: 150rpx;border-radius: 50%;}
.user_name{color: #fff;font-size: 30rpx;margin-top: 40rpx;}
.user_btn{position: absolute;left: 50%;transform: translateX(-50%);top: 40%;border: 1rpx solid #999;font-size: 38rpx;padding: 30rpx;border-radius: 10rpx;}

.user_content{position: relative;color: #666;padding-bottom: 100rpx;}
.user_main{position: absolute;width: 90%;left: 50%;transform: translateX(-50%);top: -70rpx;}
.history_wrap{background-color: #fff;display: flex;}
.history_wrap navigator{flex: 1;text-align: center;padding: 10rpx 0;}
.his_num{color: var(--themeColor);}

.orders_wrap{margin-top: 30rpx;background-color: #fff;}
.orders_title{padding: 20rpx;border-bottom: 1rpx solid #ccc;}
.orders_content{display: flex;}
.orders_content navigator{padding: 15rpx; flex:1;text-align: center;}
.orders_content navigator .iconfont{color: var(--themeColor);font-size: 40rpx;}

.address_wrap{margin-top: 30rpx;background-color: #fff;padding: 20rpx;}
.app_info_wrap{margin-top: 30rpx;background-color: #fff;}
.app_info_item{padding: 20rpx;border-bottom: 1rpx solid #ccc;}
.app_info_contact{display: flex;justify-content: space-between;}
.recommend_wrap{margin-top: 30rpx;background-color: #fff;padding: 20rpx;}