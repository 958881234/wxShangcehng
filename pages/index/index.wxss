view{
  /* 使用变量的主题颜色 */
  color:var(--themeColor)
}
.index_swiper navigator image{width: 100%;}
swiper{width: 750rpx;height: 340rpx;}

.index_cate{display: flex;}
.index_cate navigator{padding: 20rpx;flex: 1;}
.index_cate image{width: 100%;}

.index_title image{width: 100%;padding: 10rpx 0;}
.floor_list{overflow: hidden;}
.floor_list navigator{float:left;width: 33.33%;}
/* 后四张图片高度不一样，原图232*386，后四张高是第一张的一半 33.33vw*386/232/2*/
.floor_list navigator:nth-last-child(-n+4){
  /* height:33.33vw * 386 / 232 /2; */
  height: 27.72711207vw;
  border-left: 10rpx solid #fff;}
.floor_list navigator:nth-child(2),
.floor_list navigator:nth-child(3){border-bottom: 10rpx solid #fff;}
.floor_list navigator image{width: 100%;height: 100%;}

